{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.cjs",
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm: watch",
      "trace": "verbose"
    },
    {
      "name": "Run Extension (No Build)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.cjs",
        "${workspaceFolder}/dist/**/*.js"
      ],
      "trace": "verbose"
    },
    {
      "name": "Attach to Extension Host",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "timeout": 10000
    }
  ]
}


