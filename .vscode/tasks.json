{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension",
      "type": "shell",
      "command": "npm run build:all",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "silent" }
    },
    {
      "label": "Build Extension (No Webview)",
      "type": "shell",
      "command": "npm run compile",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "silent" }
    },
    {
      "label": "Watch Extension",
      "type": "shell",
      "command": "npm run watch",
      "isBackground": true,
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "silent" }
    },
    {
      "label": "Dev: Webview Build + Watch",
      "type": "shell",
      "command": "npm --prefix webview-svelte run dev",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": { "reveal": "silent" }
    },
    {
      "label": "Stop Webview Dev Server",
      "type": "shell",
      "command": "powershell -Command \"Get-Process node -ErrorAction SilentlyContinue | Where-Object { $_.Path -like '*webview-svelte*' } | Stop-Process\"",
      "problemMatcher": []
    }
  ]
}
