{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "esbuild",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+):\\s+(ERROR|WARNING)\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^>",
          "endsPattern": "^(Build succeeded|Build failed|\\[esbuild\\]|error TS)"
        }
      },
      "isBackground": true
    },
    {
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ]
    },
    {
      "type": "npm",
      "script": "test",
      "group": "test",
      "problemMatcher": []
    }
  ]
}

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Extension",
      "type": "shell",
      "command": "npm run compile",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "silent" }
    },
    {
      "label": "Build Extension (No Webview)",
      "type": "shell",
      "command": "npm run compile",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "silent" }
    },
    {
      "label": "Watch Extension",
      "type": "shell",
      "command": "npm run watch",
      "isBackground": true,
      "problemMatcher": ["$tsc"],
      "presentation": { "reveal": "silent" }
    },
    
  ]
}
