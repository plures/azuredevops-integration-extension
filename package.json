    "c8": "^8.0.0",
    "chai": "^5.1.1",
    "commitlint": "^17.0.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "husky": "^8.0.0",
    "lint-staged": "^16.0.0",
    "mocha": "^10.7.3",
    "nock": "^13.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.5",
