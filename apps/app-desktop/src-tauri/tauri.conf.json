{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Azure DevOps Integration",
  "version": "0.1.0",
  "identifier": "com.plures.azuredevops-integration",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Azure DevOps Integration",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "store:default",
    "opener:default",
    "os:default"
  ]
}
