{
  "name": "@architectural-discipline/eslint-plugin",
  "version": "1.0.0",
  "description": "ESLint plugin for architectural discipline rules",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "validate:all": "npm run lint && npm run test && npm run build",
    "check:architecture": "tsx scripts/check-architecture.ts"
  },
  "dependencies": {
    "@architectural-discipline/core": "workspace:*",
    "eslint": "^8.54.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "eslint",
    "plugin",
    "architecture",
    "discipline",
    "code-quality",
    "maintainability"
  ],
  "author": "Architectural Discipline Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/architectural-discipline/monorepo.git",
    "directory": "packages/eslint-plugin"
  },
  "bugs": {
    "url": "https://github.com/architectural-discipline/monorepo/issues"
  },
  "homepage": "https://github.com/architectural-discipline/monorepo#readme"
}
