{
  "name": "@architectural-discipline/cli",
  "version": "1.0.0",
  "description": "Command-line interface for architectural discipline analysis",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "architectural-discipline": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "validate:all": "npm run lint && npm run test && npm run build",
    "check:architecture": "tsx scripts/check-architecture.ts"
  },
  "dependencies": {
    "@architectural-discipline/core": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "cli",
    "architecture",
    "analysis",
    "code-quality",
    "maintainability",
    "refactoring"
  ],
  "author": "Architectural Discipline Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/architectural-discipline/monorepo.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/architectural-discipline/monorepo/issues"
  },
  "homepage": "https://github.com/architectural-discipline/monorepo#readme"
}
